@{
    ViewData["Title"] = "Giới thiệu - TM Hitech";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/recruitment.css" asp-append-version="true" />
}

<main class="app">
    <div id="header-include"></div>
    <section class="medical-career">
        <!-- HERO -->
        <div class="medical-hero">
            <div class="medical-hero-content">
                <span class="medical-badge">
                    <i class="fa-solid fa-staff-snake"></i> TUYỂN DỤNG Y
                    TẾ
                </span>
                <h1>
                    Cơ hội nghề nghiệp <br />
                    <strong>Ngành Chăm sóc Sức khỏe</strong>
                </h1>
                <p>
                    Môi trường chuyên nghiệp – Nhân văn – Phát triển bền
                    vững
                </p>
            </div>
        </div>

        <!-- JOBS -->
        <div class="medical-wrap">
            <h2 class="medical-title">Vị trí đang tuyển</h2>

            <div class="medical-grid">
                <!-- Job -->
                <div class="medical-job">
                    <div class="job-med-icon">
                        <i class="fa-solid fa-user-doctor"></i>
                    </div>

                    <h3>Bác sĩ Đa khoa</h3>

                    <div class="medical-meta">
                        <span>
                            <i class="fa-solid fa-hospital"></i> Cơ sở
                            Hà Nội
                        </span>
                        <span>
                            <i class="fa-solid fa-clock"></i> Toàn thời
                            gian
                        </span>
                    </div>

                    <p>
                        Khám, tư vấn và điều trị cho bệnh nhân theo quy
                        trình chuyên môn.
                    </p>

                    <div class="medical-footer">
                        <span class="medical-salary">💰 Thỏa thuận</span>
                        <a href="/Home/Apply" class="medical-apply">Ứng tuyển</a>
                    </div>
                </div>

                <!-- Job -->
                <div class="medical-job featured">
                    <div class="job-med-icon">
                        <i class="fa-solid fa-user-nurse"></i>
                    </div>

                    <h3>Điều dưỡng</h3>

                    <div class="medical-meta">
                        <span>
                            <i class="fa-solid fa-hospital"></i> TP. Hồ
                            Chí Minh
                        </span>
                        <span>
                            <i class="fa-solid fa-clock"></i> Ca
                            xoay
                        </span>
                    </div>

                    <p>
                        Chăm sóc bệnh nhân, hỗ trợ bác sĩ trong quá
                        trình điều trị.
                    </p>

                    <div class="medical-footer">
                        <span class="medical-salary">💰 8–12 triệu</span>
                        <a href="/Home/Apply" class="medical-apply">Ứng tuyển</a>
                    </div>
                </div>

                <!-- Job -->
                <div class="medical-job">
                    <div class="job-med-icon">
                        <i class="fa-solid fa-laptop-medical"></i>
                    </div>

                    <h3>Nhân viên CNTT Y tế</h3>

                    <div class="medical-meta">
                        <span>
                            <i class="fa-solid fa-hospital"></i> Trung
                            tâm dữ liệu
                        </span>
                        <span>
                            <i class="fa-solid fa-clock"></i> Hành
                            chính
                        </span>
                    </div>

                    <p>
                        Quản trị hệ thống CNTT, phần mềm bệnh viện và dữ
                        liệu y khoa.
                    </p>

                    <div class="medical-footer">
                        <span class="medical-salary">💰 12–18 triệu</span>
                        <a href="/Home/Apply" class="medical-apply">Ứng tuyển</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="footer-include"></div>
</main>