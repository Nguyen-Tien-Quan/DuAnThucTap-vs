@{
    ViewData["Title"] = "Giới thiệu - TM Hitech";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/contact.css" asp-append-version="true" />
}

<main class="app">
    <div id="header-include"></div>
    <section class="contact-banner"></section>

    <!-- SERVICE BREADCRUMB -->
    <div class="contact-breadcrumb">
        <a href="#">Trang chủ</a> / <span>Liên hệ</span>
    </div>
    <section class="sv-wrapper">
        <div class="container">
            <h2 class="sv-title">
                <i class="fa-solid fa-signal"></i> LIÊN HỆ
            </h2>

            <div class="company-name">
                <h3>CÔNG TY CỔ PHẦN THIẾT BỊ CÔNG NGHỆ CAO TM.</h3>
                <h3>TM HI-TECH JSC.</h3>
            </div>

            <div class="contact-grid">
                <a href="contact-link">
                    <div class="contact-item">
                        <div class="map-box">
                            <img src="../assets/img/map1.png"
                                 alt="Map Trụ sở" />
                        </div>
                        <div class="contact-info">
                            <h4>
                                <i class="fa-solid fa-location-dot"></i>
                                Trụ sở:
                            </h4>
                            <p>
                                12B/2, 781 Hồng Hà, Quận Hoàn Kiếm, Hà
                                Nội, Việt Nam.
                            </p>
                            <p>
                                Tel: (04) 3 576 3436 | Fax: (04) 3 576
                                5512
                            </p>
                        </div>
                    </div>
                </a>

                <a href="contact-link">
                    <div class="contact-item">
                        <div class="map-box">
                            <img src="../assets/img/map2.png"
                                 alt="Map VPĐD" />
                        </div>
                        <div class="contact-info">
                            <h4>
                                <i class="fa-solid fa-location-dot"></i>
                                VPĐD tại HN:
                            </h4>
                            <p>42 Phương Mai, Đống Đa, Hà Nội</p>
                            <p>Tel: (04) 3 576 3636 & (04) 3576 6999</p>
                            <p>Hotline: 098 836 6622</p>
                        </div>
                    </div>
                </a>

                <a href="contact-link">
                    <div class="contact-item">
                        <div class="map-box">
                            <img src="../assets/img/map3.png"
                                 alt="Map HCM" />
                        </div>
                        <div class="contact-info">
                            <h4>
                                <i class="fa-solid fa-location-dot"></i>
                                Chi nhánh HCM:
                            </h4>
                            <p>
                                08.04 lô A, chung cư Bàu Cát 2, phường
                                10, Q. Tân Bình, TP.HCM
                            </p>
                            <p>
                                Tel: (08) 3860 3136 | Hotline: 098 969
                                7177
                            </p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="contact-form-wrapper">
                <p class="form-thanks">
                    Cảm ơn các bạn đã quan tâm đến sản phẩm và dịch vụ
                    của Công ty chúng tôi!
                </p>
                <p class="form-guide">
                    Gửi thông tin liên hệ cho chúng tôi
                </p>

                <form action="#" class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <input type="text"
                                   placeholder="Họ tên*"
                                   required />
                            <input type="text"
                                   placeholder="Điện thoại *" />
                            <input type="email" placeholder="Email*" />
                            <input type="text" placeholder="Địa chỉ" />
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Tiêu đề" />
                            <textarea placeholder="Nội dung"
                                      rows="8"></textarea>
                        </div>
                    </div>
                    <div class="form-submit">
                        <button type="submit">GỬI ĐI</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <div id="footer-include"></div>
</main>