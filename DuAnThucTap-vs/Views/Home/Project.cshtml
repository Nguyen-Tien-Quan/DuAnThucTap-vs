@model List<DuAnThucTap_vs.Models.Project>

@{
    ViewData["Title"] = "Giới thiệu - TM Hitech";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/assets/css/project.css" asp-append-version="true" />
}
<main class="main">
    <div id="header-include"></div>

    <!-- BANNER -->
    <section class="project-banner"></section>

    <!-- SERVICE BREADCRUMB -->
    <div class="project-breadcrumb">
        <a href="#">Trang chủ</a> / <span>Liên hệ</span>
    </div>
    <!-- CONTENT CHÍNH -->
    <section class="content">
        <!-- LEFT: 70% -->
        <div class="content-left">
            <h2>DỰ ÁN</h2>

            <!-- Dự án nổi bật (ảnh lớn + mô tả) -->
            @if (Model.Any())
            {
                var featured = Model.First();

                <div class="featured-project">
                    <div class="featured-img">
                        <img src="~/assets/img/@featured.ImageUrl" alt="@featured.ProjectName" />
                    </div>
                    <div class="featured-desc">
                        <h3>@featured.ProjectName</h3>
                        <p>@featured.ShortDescription</p>
                        <a href="~/Home/ProjectDetail/@featured.ProjectId" class="btn-detail">
                            CHI TIẾT →
                        </a>
                    </div>
                </div>
            }


            <!-- Grid dự án nhỏ -->
            <div class="projects-grid">
                @foreach (var item in Model.Skip(1))
                {
                    <a href="~/Home/ProjectDetail/@item.ProjectId">
                        <div class="project-item">
                            <img src="~/assets/img/@item.ImageUrl" alt="@item.ProjectName" />
                            <p>@item.ProjectName</p>
                        </div>
                    </a>
                }
            </div>

            @if (ViewBag.TotalPages > 1)
            {
                <div class="pagination">

                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a class="page-num"
                           href="/Home/Project?page=@(ViewBag.CurrentPage - 1)">
                            &laquo;
                        </a>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a class="page-num @(i == ViewBag.CurrentPage ? "active" : "")"
                           href="/Home/Project?page=@i">
                            @i
                        </a>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a class="page-num"
                           href="/Home/Project?page=@(ViewBag.CurrentPage + 1)">
                            &raquo;
                        </a>
                    }
                </div>
            }

        </div>

        <!-- RIGHT: 30% sidebar -->
        <aside class="content-right" id="sidebar-include">@await Html.PartialAsync("_Sidebar")</aside>
    </section>

    <div id="footer-include"></div>
</main>